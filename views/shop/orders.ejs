<%- include('../includes/head.ejs') %>

<body>
<!--navigation panel-->
<%- include('../includes/navigation.ejs') %>
<h1>Orders page</h1>
<main>
    <% if (orders.length > 0) { %>
        <ul>
            <% orders.forEach(order => { %>
                <li>
                    <h3><%= order._id %></h3>
                    <ul>
                        <% order.items.forEach(products => { %>
                            <li><%= products.title %> (<%= products.quantity %>)</li>
                        <% }) %>
                    </ul>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <h3>no orders yet</h3>
    <% } %>

<%- include('../includes/end.ejs') %>