<!--styles -->
<%- include('../includes/head.ejs') %>

<body>
<!--navigation panel-->
<%- include('../includes/navigation.ejs') %>

<main>
    <% if(prods.length > 0) { %>
        <h2>Products:</h2>
        <div class="grid">
            <% prods.map(product => { %>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"><%= product.title %></h1>
                    </header>

                    <div class="card__image">
                        <% if (product.imageUrl) { %>
                            <img src="<%= product.imageUrl %>"
                                 alt="<%= product.title %>">
                        <% } else { %>
                            <img src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png"
                                 alt="A Book">
                        <% } %>
                    </div>

                    <div class="card__content">
                        <h3 class="product__price">price $: <%= product.price %></h3>
                        <h3 class="product__price">description:</h3>
                        <p class="product__description"><%= product.description %></p>
                    </div>
                    <div class="card__actions">
                        <form action="/add-to-cart" method="POST">
                            <button class="btn">
                                <a href="/products/<%= product.id %>">Details</a></button>
                            <button class="btn">Add to Cart</button>
                        </form>
                    </div>
                </article>
            <% }) %>
        </div>
    <% } else { %>
        <h2>No products</h2>
    <% } %>

<%- include('../includes/end.ejs') %>